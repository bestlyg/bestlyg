{
    "name": "@bestlyg/cli",
    "version": "0.0.0",
    "author": "bestlyg",
    "type": "module",
    "main": "./dist/lib/index.cjs",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "./dist/esm/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/lib/index.cjs",
            "default": "./dist/esm/index.js"
        },
        "./globals": {
            "types": "./dist/types/globals.d.ts",
            "import": "./dist/esm/globals.js",
            "require": "./dist/lib/globals.cjs",
            "default": "./dist/esm/globals.js"
        },
        "./*": {
            "import": "./*",
            "require": "./*",
            "default": "./*"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "run:dev": "cross-env BEST_DEV=1 node --max-old-space-size=4096 bin/best.js",
        "run:prod": "node --max-old-space-size=4096 bin/best.js",
        "build": "modern build",
        "prepublishOnly": "pnpm build",
        "dev": "modern build --watch"
    },
    "bin": {
        "@bestlyg/cli": "./bin/best.js",
        "best": "./bin/best.js"
    },
    "keywords": [],
    "license": "ISC",
    "dependencies": {
        "@bestlyg/cli": "workspace:^",
        "@bestlyg/common": "workspace:^",
        "@manypkg/get-packages": "^2.2.1",
        "@modern-js/module-tools": "catalog:",
        "@types/adm-zip": "^0.5.7",
        "@types/doctrine": "catalog:",
        "@types/figlet": "catalog:",
        "@types/fs-extra": "catalog:",
        "@types/inquirer": "catalog:",
        "@types/jsdom": "catalog:",
        "@types/lodash": "catalog:",
        "@types/minimist": "catalog:",
        "@types/node": "catalog:",
        "@types/semver": "catalog:",
        "adm-zip": "^0.5.16",
        "axios": "catalog:",
        "cheerio": "1.0.0",
        "commander": "catalog:",
        "cross-env": "catalog:",
        "dayjs": "catalog:",
        "doctrine": "^3.0.0",
        "dotenv": "catalog:",
        "figlet": "^1.7.0",
        "fs-extra": "catalog:",
        "inquirer": "^10.1.8",
        "jsdom": "^24.1.0",
        "lodash": "catalog:",
        "metadata-file": "workspace:^",
        "minimist": "^1.2.8",
        "ora": "^8.0.1",
        "rimraf": "catalog:",
        "semver": "^7.6.0",
        "typescript": "catalog:",
        "winston": "^3.14.2",
        "zod": "catalog:",
        "zx": "catalog:"
    }
}
