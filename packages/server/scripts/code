class Solution:
    def minimumTotal(self, triangle: List[List[int]]) -> int:
        @cache
        def dfs(row: int, col: int) -> int:
            if row == len(triangle): return 0
            cur = triangle[row][col]
            return cur + min(dfs(row + 1, col), dfs(row + 1, col + 1))
        return dfs(0, 0)