class Solution:
    def minCost(self, colors: str, neededTime: List[int]) -> int:
        n = len(colors)
        i = 0
        res = 0
        while i < n:
            max_time = neededTime[i]
            sum_time = max_time
            start = i
            while i + 1 < n and colors[i + 1] == colors[start]:
                i += 1
                max_time = max(max_time, neededTime[i])
                sum_time += neededTime[i]
            res += sum_time - max_time
            i += 1
        return res