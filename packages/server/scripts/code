class Solution:
    def countBinarySubstrings(self, s: str) -> int:
        arr = []
        i = 0
        n = len(s)
        while i < n:
            start = i
            while i + 1 < n and s[i + 1] == s[start]:
                i += 1
            arr.append(i - start + 1)
            i += 1
        return sum(min(v1, v2) for v1, v2 in pairwise(arr))