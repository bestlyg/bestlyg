class Solution:
    def getDescentPeriods(self, prices: List[int]) -> int:
        n = len(prices)
        prev = 0
        res = 1
        for i in range(1, n):
            res += 1
            if prices[i] == prices[i - 1] - 1:
                res += i - prev
            else:
                prev = i
        return res