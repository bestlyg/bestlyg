class Solution:
    def hasIncreasingSubarrays(self, nums: List[int], k: int) -> bool:
        n = len(nums)
        def check(start: int, end: int) -> bool:
            for i in range(start, end):
                if nums[i] > nums[i + 1] - 1:
                    return False
            return True
        return any(
            check(i, i + k - 1) and check(i + k, i + 2 * k - 1)
            for i in range(n - 2 * k + 1)
        )