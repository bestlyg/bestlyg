class Solution:
    def countValidSelections(self, nums: List[int]) -> int:
        rsum = sum(nums)
        lsum = 0
        res = 0
        for num in nums:
            lsum += num
            rsum -= num
            if num == 0:
                d = abs(lsum - rsum)
                if d == 0: res += 2
                elif d == 1: res += 1
        return res