{
    "name": "@bestlyg/server",
    "version": "0.0.0",
    "author": "bestlyg",
    "type": "module",
    "main": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "./dist/types/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/lib/index.cjs",
            "default": "./dist/esm/index.js"
        },
        "./globals": {
            "types": "./dist/types/globals.d.ts",
            "import": "./dist/esm/globals.js",
            "require": "./dist/lib/globals.cjs",
            "default": "./dist/esm/globals.js"
        },
        "./*": {
            "import": "./*",
            "require": "./*",
            "default": "./*"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "modern build",
        "prepublishOnly": "pnpm build",
        "dev": "concurrently \"modern build --watch\" \"nodemon\"",
        "deploy": "node scripts/deploy.mjs",
        "deploy:pm2": "pm2 start ecosystem.config.cjs"
    },
    "dependencies": {
        "@bestlyg/config": "workspace:^",
        "@bestlyg/site": "workspace:^",
        "@bestlyg/static": "workspace:^",
        "@koa/multer": "^3.0.2",
        "@koa/router": "^13.0.0",
        "@modern-js/module-tools": "^2.58.0",
        "@types/koa-send": "^4.1.6",
        "@types/nodemailer": "^6.4.15",
        "cron": "^3.1.7",
        "dayjs": "^1.11.12",
        "koa": "^2.15.3",
        "koa-body-parsers": "^5.0.0",
        "koa-compress": "^5.1.1",
        "koa-send": "^5.0.1",
        "koa-static": "^5.0.0",
        "marked": "^13.0.0",
        "md2resume": "workspace:^",
        "multer": "1.4.5-lts.1",
        "nodemailer": "^6.7.6",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@bestlyg/cli": "workspace:^",
        "@bestlyg/server": "workspace:^",
        "@types/koa": "^2.15.0",
        "@types/koa-compress": "^4.0.6",
        "@types/koa-static": "^4.0.4",
        "@types/koa__router": "^12.0.4",
        "@types/node": "^22.1.0",
        "concurrently": "^8.2.2",
        "nodemon": "^3.1.4",
        "typescript": "^5.5.4"
    }
}
