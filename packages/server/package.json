{
    "name": "@bestlyg/server",
    "version": "0.0.0",
    "author": "bestlyg",
    "private": true,
    "scripts": {
        "prisma:generate": "node ./scripts/generate.mjs",
        "build": "pnpm prisma:generate && nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
        "start": "pnpm prisma:generate && nest start",
        "start:dev": "pnpm prisma:generate && nest start --watch",
        "start:debug": "pnpm prisma:generate && nest start --debug --watch",
        "start:prod": "pnpm prisma:generate && NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@bestlyg/cli": "workspace:^",
        "@bestlyg/common": "workspace:^",
        "@bestlyg/config": "workspace:^",
        "@bestlyg/data": "workspace:^",
        "@bestlyg/server": "workspace:^",
        "@bestlyg/site": "workspace:^",
        "@bestlyg/static": "workspace:^",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/schedule": "^4.1.2",
        "@nestjs/serve-static": "^4.0.2",
        "@prisma/client": "catalog:",
        "@types/fs-extra": "catalog:",
        "dayjs": "catalog:",
        "dotenv": "catalog:",
        "express": "^4.21.1",
        "fs-extra": "catalog:",
        "lodash": "catalog:",
        "marked": "^13.0.0",
        "nodemailer": "^6.7.6",
        "prisma": "catalog:",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "catalog:",
        "@types/jest": "catalog:",
        "@types/lodash": "catalog:",
        "@types/node": "catalog:",
        "@types/nodemailer": "^6.4.17",
        "@types/supertest": "catalog:",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "catalog:"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@bestlyg/data(|/.*)$": "<rootDir>/libs/data/src/$1",
            "^@bestlyg-server/common(|/.*)$": "<rootDir>/libs/common/src/$1",
            "^@bestlyg-server/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
            "^@bestlyg-server/serverless(|/.*)$": "<rootDir>/libs/serverless/src/$1"
        }
    }
}
