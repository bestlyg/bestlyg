{
    "name": "@bestlyg/site",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "docusaurus": "docusaurus",
        "start": "zx scripts/prestart.mjs && docusaurus start",
        "build": "pnpm fork-leetcode && docusaurus build --out-dir dist",
        "build:github": "pnpm fork-leetcode && cross-env BESTLYG_BASEURL=/ docusaurus build --out-dir dist",
        "swizzle": "docusaurus swizzle",
        "deploy:docusaurus": "docusaurus deploy",
        "clear": "docusaurus clear",
        "serve": "docusaurus serve",
        "write-translations": "docusaurus write-translations",
        "write-heading-ids": "docusaurus write-heading-ids",
        "typecheck": "tsc",
        "fork-leetcode": "zx scripts/fork-leetcode.mjs",
        "deploy": "node scripts/deploy.mjs",
        "deploy:github": "node scripts/deploy-github.mjs",
        "deploy:all": "pnpm run deploy && pnpm run deploy:github"
    },
    "dependencies": {
        "@ant-design/icons": "^5.4.0",
        "@bestlyg/code": "workspace:^",
        "@bestlyg/config": "workspace:^",
        "@bestlyg/data": "workspace:^",
        "@bestlyg/leetcode": "workspace:^",
        "@docusaurus/core": "3.4.0",
        "@docusaurus/preset-classic": "3.4.0",
        "@docusaurus/theme-common": "^3.4.0",
        "@mdx-js/react": "^3.0.1",
        "ahooks": "^3.7.11",
        "antd": "^5.19.4",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.12",
        "docusaurus-plugin-sass": "^0.2.5",
        "echarts": "^5.3.1",
        "lodash": "^4.17.21",
        "prism-react-renderer": "^2.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rehype-katex": "^7.0.0",
        "remark-math": "^6.0.0",
        "sass": "^1.57.1",
        "zx": "^7.2.3"
    },
    "devDependencies": {
        "@bestlyg/cli": "workspace:^",
        "@bestlyg/config": "workspace:^",
        "@bestlyg/data": "workspace:^",
        "@docusaurus/module-type-aliases": "3.4.0",
        "@docusaurus/tsconfig": "3.4.0",
        "@docusaurus/types": "3.4.0",
        "@types/echarts": "^4.9.22",
        "@types/lodash": "^4.17.7",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "cross-env": "^7.0.3",
        "raw-loader": "^4.0.2",
        "typescript": "~5.4.5"
    },
    "browserslist": {
        "production": [
            ">0.5%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 3 chrome version",
            "last 3 firefox version",
            "last 5 safari version"
        ]
    },
    "engines": {
        "node": ">=18.0"
    }
}
