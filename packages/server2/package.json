{
    "name": "@bestlyg/server2",
    "version": "0.0.0",
    "author": "bestlyg",
    "type": "module",
    "main": "./dist/lib/index.cjs",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "./dist/types/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/lib/index.cjs",
            "default": "./dist/esm/index.js"
        },
        "./globals": {
            "types": "./dist/types/globals.d.ts",
            "import": "./dist/esm/globals.js",
            "require": "./dist/lib/globals.cjs",
            "default": "./dist/esm/globals.js"
        },
        "./*": {
            "import": "./*",
            "require": "./*",
            "default": "./*"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "modern build",
        "prepublishOnly": "pnpm build",
        "dev": "modern build --watch",
        "start": "nodemon"
    },
    "dependencies": {
        "@modern-js/module-tools": "^2.58.0",
        "koa": "^2.15.3",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@bestlyg/cli": "workspace:^",
        "@bestlyg/server2": "workspace:^",
        "@types/koa": "^2.15.0",
        "@types/node": "^22.1.0",
        "nodemon": "^3.1.4",
        "typescript": "^5.5.4"
    }
}
