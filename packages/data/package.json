{
    "name": "@bestlyg/data",
    "version": "0.0.1",
    "description": "",
    "author": "bestlyg",
    "type": "module",
    "main": "./dist/lib/index.cjs",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "./dist/types/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/lib/index.cjs",
            "default": "./dist/esm/index.js"
        },
        "./*": {
            "import": "./*",
            "require": "./*",
            "default": "./*"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "encrypt": "node ./scripts/encrypt.mjs",
        "decrypt": "node ./scripts/decrypt.mjs",
        "ledger:create": "node ./scripts/create-ledger.mjs",
        "ledger:recreate": "node ./scripts/recreate-ledger.mjs",
        "build": "modern build",
        "dev": "modern build --watch"
    },
    "license": "ISC",
    "devDependencies": {
        "@bestlyg/cli": "workspace:^",
        "@bestlyg/config": "workspace:^",
        "@modern-js/module-tools": "^2.60.2",
        "@types/node": "^20.16.10",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "dayjs": "^1.11.13"
    }
}
