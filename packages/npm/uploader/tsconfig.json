{
    "compilerOptions": {
        "rootDir": "src",
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "paths": { "@/*": ["src/*"] }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
