{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./lib",
        "rootDir": "./src",
        "allowJs": true,
        "noImplicitAny": false,
        "verbatimModuleSyntax": false,
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "target": "ES2015",
        "types": ["node"]
    },
    "exclude": ["node_modules", "lib/**/*"]
}
