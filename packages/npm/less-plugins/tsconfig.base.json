{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./lib",
        "rootDir": "./src",
        "allowJs": true,
        "noImplicitAny": false,
        "verbatimModuleSyntax": true,
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "target": "es5",
        "types": ["node"]
    },
    "exclude": ["node_modules", "lib/**/*"]
}
