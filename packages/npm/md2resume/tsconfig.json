{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "types": ["react"],
        "jsx": "preserve",
        "jsxImportSource": "react",
        "module": "ESNext",
        "moduleResolution": "Node",
        "rootDir": ".",
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src", "modern.config.ts"],
    "exclude": ["**/node_modules"]
}
