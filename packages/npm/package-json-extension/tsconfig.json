{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./lib",
        "rootDir": "./src",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "importHelpers": true,
        "noImplicitAny": false,
        "declaration": true,
        "esModuleInterop": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
