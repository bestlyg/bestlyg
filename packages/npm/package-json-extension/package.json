{
    "name": "package-json-extension",
    "version": "0.0.5",
    "description": "Extend your package json.",
    "homepage": "https://github.com/bestlyg/package-json-extension",
    "author": "BestLyg",
    "bin": {
        "extend-package-json": "./bin/extend-package-json.js"
    },
    "type": "module",
    "main": "./dist/lib/index.cjs",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "./dist/types/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/lib/index.cjs",
            "default": "./dist/esm/index.js"
        },
        "./*": {
            "import": "./*",
            "require": "./*",
            "default": "./*"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "rimraf ./lib ./node_modules",
        "build": "modern build",
        "dev": "modern build --watch",
        "test": "node ./tests",
        "extend": "extend-package-json",
        "prepublishOnly": "pnpm build"
    },
    "keywords": [
        "package",
        "package-json",
        "extend",
        "extends",
        "extension"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/bestlyg/package-json-extension.git"
    },
    "devDependencies": {
        "@bestlyg/cli": "workspace:^",
        "@modern-js/module-tools": "^2.60.2",
        "@types/node": "^20.17.10",
        "rimraf": "^5.0.9",
        "tslib": "^2.6.2",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "fs-extra": "^11.1.1",
        "lodash": "^4.17.21",
        "zx": "^8.3.0"
    },
    "files": [
        "bin",
        "lib",
        "package.json",
        "README.md"
    ]
}
