{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/idl/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
