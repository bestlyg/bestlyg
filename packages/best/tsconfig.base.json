{
    "compilerOptions": {
        "baseUrl": ".",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "declaration": true,
        "jsx": "react-jsx",
        "module": "es6",
        "target": "es6",
        "lib": ["ESNext", "dom"],
        "types": ["node"],
        "paths": {
            "@best/*": ["components/*/src", "packages/*/src"]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "components/**/*.ts",
        "components/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
