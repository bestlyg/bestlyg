{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "module": "commonjs",
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["src/*"],
            "@best/*": ["components/*", "packages/*"]
        },
        "types": ["node"]
    },
    "include": ["scripts/**/*.ts", "scripts/**/*.tsx", "stories/**/*.ts", "stories/**/*.tsx"]
}
