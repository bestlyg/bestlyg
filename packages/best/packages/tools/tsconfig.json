{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "module": "commonjs",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["node"]
    },
    "include": ["src/**/*.ts"]
}
