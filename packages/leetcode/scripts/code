class Solution:
    def validSubstringCount(self, word1: str, word2: str) -> int:
        c = Counter(word2)
        f = len(c)
        res = l = 0
        for r in range(len(word1)):
            c[word1[r]] -= 1
            if c[word1[r]] == 0: f -= 1
            while l < r and c[word1[l]] < 0:
                c[word1[l]] += 1
                if c[word1[l]] == 1: f += 1
                l += 1
            if f == 0: res += l + 1
        return res