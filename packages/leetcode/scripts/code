class Solution:
    def isZeroArray(self, nums: List[int], queries: List[List[int]]) -> bool:
        n = len(nums)
        sums = [0] * (n + 1)
        for l, r in queries:
            sums[l] -= 1
            sums[r + 1] += 1
        offset = 0
        for i in range(n):
            offset += sums[i]
            if nums[i] + offset > 0: return False
        return True