class Solution:
    def lengthAfterTransformations(self, s: str, t: int) -> int:
        n = 26
        last = 25
        arr = [0] * n
        for c in s:
            arr[ord(c) - ord('a')] += 1
        while t:
            arr[(last + 1) % n] += arr[last]
            last = (last - 1 + n) % n
            t -= 1
        return sum(arr) % (10 ** 9 + 7)