class Solution:
    def numRabbits(self, answers: List[int]) -> int:
        counter = Counter(answers)
        res = 0
        for num, cnt in counter.items():
            if cnt <= num + 1:
                res += num + 1
            elif num == 0:
                res += cnt
            else:
                res += ceil(cnt / (num + 1)) * (num + 1)
        return res