class Solution:
    def countGoodTriplets(self, arr: List[int], a: int, b: int, c: int) -> int:
        return sum(
            abs(arr[i] - arr[j]) <= a and 
            abs(arr[j] - arr[k]) <= b and 
            abs(arr[i] - arr[k]) <= c
            for k in range(len(arr))
            for j in range(k)
            for i in range(j)
        )