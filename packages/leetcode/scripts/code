class Solution:
    def validPalindrome(self, s: str, removed = False) -> bool:
        return len(s) <= 1 or \
               s[0] == s[-1] and self.validPalindrome(s[1: len(s) - 1], removed) or \
               not removed and (self.validPalindrome(s[:len(s) - 1], True) or self.validPalindrome(s[1:], True))