class Solution:
    def longestSubarray(self, nums: List[int]) -> int:
        n = len(nums)
        l = c0 = res = 0
        for r in range(n):
            c0 += nums[r] == 0
            while c0 == 2:
                c0 -= nums[l] == 0
                l += 1
            res = max(res, r - l)
        return res