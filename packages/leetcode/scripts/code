class Solution:
    def partitionArray(self, nums: List[int], k: int) -> int:
        nums.sort()
        n = len(nums)
        res = 0
        i = 0
        while i < n:
            num = nums[i]
            while i + 1 < n and nums[i + 1] - num <= k:
                i += 1
            res += 1
            i += 1
        return res