class Solution:
    def checkPowersOfThree(self, n: int) -> bool:
        @cache
        def dfs(num: int, cur: int) -> bool:
          if 3 ** num > cur: return False
          if 3 ** num == cur: return True
          return dfs(num + 1, cur - 3 ** num) or dfs(num + 1, cur)
        return dfs(0, n)