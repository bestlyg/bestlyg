class Solution:
    def longestSubarray(self, nums: List[int]) -> int:
        n = len(nums)
        nmax = max(nums)
        i = 0
        res = 0
        while i < n:
            if nums[i] == nmax:
                cnt = 0
                while i < n and nums[i] == nmax:
                    cnt += 1
                    i += 1
                res = max(res, cnt)
            i += 1
        return res