class Solution:
    def numberOfAlternatingGroups(self, colors: List[int]) -> int:
        n = len(colors)
        p1 = colors[0]
        p2 = colors[1]
        i = 2
        res = 0
        while True:
            p3 = colors[i]
            if p1 == p3 and p1 != p2:
                res += 1
            p1 = p2
            p2 = p3
            i = (i + 1) % n
            if i == 2: break
        return res