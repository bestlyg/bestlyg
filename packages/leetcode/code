class Solution:
    def longestContinuousSubstring(self, s: str) -> int:
        res = 0
        n = len(s)
        i = 0
        while i < n:
            cnt = 1
            while i + 1 < n and ord(s[i + 1]) - 1 == ord(s[i]):
                cnt += 1
                i += 1
            res = max(res, cnt)
            i += 1
        return res