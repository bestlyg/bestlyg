class Solution:
    def maxNumOfMarkedIndices(self, nums: List[int]) -> int:
        nums.sort()
        n = len(nums)
        r = n // 2
        res = 0
        for l in range(n // 2):
            while r < n and nums[l] * 2 > nums[r]: r += 1
            if r == n: break
            res += 2
            r += 1
        return res