class Solution:
    def maxScore(self, grid: List[List[int]]) -> int:
        n = len(grid)
        m = len(grid[0])
        dp = [[inf] * (m + 1) for _ in range(n + 1)]
        res = -inf
        for i in range(1, n + 1):
            for j in range(1, m + 1):
                dp[i][j] = min(dp[i - 1][j], dp[i][j - 1], grid[i - 1][j - 1])
                res = max(res, grid[i - 1][j - 1] - min(dp[i - 1][j], dp[i][j - 1]))
        return res