class Solution:
    def minSpeedOnTime(self, dist: List[int], hour: float) -> int:
        def run(speed: int) -> float:
            res = float(0)
            for d in dist:
                res = ceil(res) + d / speed
            return res
        MAX = 0x7fffffff
        l = 1
        r = MAX
        while l < r:
            m = (l + r) // 2
            v = run(m)
            if v <= hour:
                r = m
            else:
                l = m + 1
        return l if l != MAX else -1