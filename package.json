{
  "name": "bestlyg",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "rm -rf ./**/node_modules && pnpm i",
    "format": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "build": "pnpm --filter server run build && pnpm --filter client run build",
    "deploy": "pnpm --filter server run start:prod",
    "deploy:pm2": "pm2 start packages/server/dist/main.js",
    "commit": "git-cz",
    "commit:auto": "git pull && git add -A && pnpm run commit && git push -u origin master",
    "update:coreCode": "cd scripts && ts-node updateCoreCode.ts",
    "leetcode:batch": "cd scripts/leetcode && ts-node batchLeetCode",
    "leetcode:readme": "cd scripts/leetcode && ts-node createLeetCodeReadme",
    "leetcode:markdown": "cd scripts/leetcode && ts-node createLeetCodeMarkDown",
    "leetcode:auto": "pnpm run leetcode:markdown && pnpm run leetcode:readme && pnpm run commit:auto",
    "run:js": "cd scripts/leetcode && node script.js",
    "run:ts": "cd scripts/leetcode && ts-node script.ts",
    "haizei:oj": "node haizeix/scripts/oj.js",
    "<!-- 快捷方式 -->": "下面是快捷方式用的",
    "rj": "pnpm run run:js",
    "rt": "pnpm run run:ts",
    "lb": "pnpm run leetcode:batch",
    "lr": "pnpm run leetcode:readme",
    "lm": "pnpm run leetcode:markdown",
    "la": "pnpm run leetcode:auto",
    "dp": "pnpm run deploy",
    "c": "pnpm run commit",
    "ca": "pnpm run commit:auto",
    "ucc": "pnpm run update:coreCode",
    "ho": "pnpm run haizei:oj"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cheerio": "^0.22.31",
    "@types/fs-extra": "^9.0.13",
    "@types/shelljs": "^0.8.11",
    "axios": "^0.27.2",
    "chalk": "4",
    "cheerio": "1.0.0-rc.12",
    "dayjs": "^1.11.3",
    "fs-extra": "^10.1.0",
    "git-cz": "^4.9.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.6",
    "shelljs": "^0.8.5",
    "ts-node": "^10.8.2"
  }
}
