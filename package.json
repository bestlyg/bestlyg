{
    "name": "bestlyg",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "version:node": "node -v",
        "setup": "pnpm -r exec rimraf node_modules && pnpm i --force",
        "format": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
        "build:server": "pnpm --filter server run build",
        "build:blog": "cd scripts && ts-node build-blog.ts",
        "build:site": "./scripts/site.sh",
        "deploy:pm2": "pm2 start packages/server/dist/main.js",
        "commit": "git-cz",
        "commit:auto": "git pull origin master && git add -A && pnpm run commit && git push -u origin master && git push -u github master",
        "update:coreCode": "cd scripts && ts-node updateCoreCode.ts",
        "haizei:oj": "node haizeix/scripts/oj.js",
        "<!-- 快捷方式 -->": "下面是快捷方式用的",
        "rj": "pnpm run run:js",
        "rt": "pnpm run run:ts",
        "dp": "pnpm run deploy",
        "c": "pnpm run commit",
        "ca": "pnpm run commit:auto",
        "ucc": "pnpm run update:coreCode",
        "ho": "pnpm run haizei:oj"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/cheerio": "^0.22.31",
        "@types/fs-extra": "^9.0.13",
        "@types/shelljs": "^0.8.11",
        "axios": "^0.27.2",
        "chalk": "4",
        "cheerio": "1.0.0-rc.12",
        "dayjs": "^1.11.3",
        "fs-extra": "^10.1.0",
        "git-cz": "^4.9.0",
        "lodash": "^4.17.21",
        "minimist": "^1.2.6",
        "rimraf": "^3.0.2",
        "shelljs": "^0.8.5",
        "ts-node": "^10.8.2"
    }
}
