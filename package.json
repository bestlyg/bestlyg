{
    "name": "bestlyg",
    "version": "1.0.0",
    "private": true,
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "submodule:update": "git submodule update --init --recursive",
        "version:node": "node -v",
        "setup": "rm -rf node_modules && rm -rf ./**/node_modules && pnpm i --force",
        "format": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
        "build:server": "pnpm --filter server run build",
        "build:blog": "cd scripts && ts-node build-blog.ts",
        "build:site": "./scripts/site.sh",
        "deploy:pm2": "pm2 start packages/server/dist/main.js",
        "commit": "git-cz",
        "commit:auto": "git pull origin master && git add -A && pnpm run commit && git push -u origin master && git push -u github master",
        "update:coreCode": "cd scripts && ts-node updateCoreCode.ts",
        "haizei:oj": "node haizeix/scripts/oj.js",
        "script": "zx scripts/main.mjs",
        "<!-- 快捷方式 -->": "下面是快捷方式用的",
        "rj": "pnpm run run:js",
        "rt": "pnpm run run:ts",
        "dp": "pnpm run deploy",
        "c": "pnpm run commit",
        "ca": "pnpm run commit:auto",
        "ucc": "pnpm run update:coreCode",
        "ho": "pnpm run haizei:oj"
    },
    "devDependencies": {
        "@changesets/cli": "2.24.1",
        "@changesets/get-release-plan": "^4.0.0",
        "@changesets/types": "^6.0.0",
        "@commitlint/cli": "^17.8.1",
        "@commitlint/config-conventional": "^17.8.1",
        "@manypkg/get-packages": "^2.2.1",
        "@nx/eslint": "18.0.4",
        "@nx/jest": "18.0.4",
        "@nx/storybook": "18.0.4",
        "@nx/web": "18.0.4",
        "@nx/webpack": "18.0.4",
        "@types/axios": "^0.14.0",
        "@types/cheerio": "^0.22.31",
        "@types/fs-extra": "^9.0.13",
        "@types/shelljs": "^0.8.11",
        "axios": "^0.27.2",
        "chalk": "4",
        "cheerio": "1.0.0-rc.12",
        "dayjs": "^1.11.3",
        "eslint": "~8.48.0",
        "fs-extra": "^10.1.0",
        "git-cz": "^4.9.0",
        "jest": "^29.4.1",
        "lodash": "^4.17.21",
        "minimist": "^1.2.6",
        "nx": "18.0.4",
        "rimraf": "^3.0.2",
        "semver": "^7.6.0",
        "shelljs": "^0.8.5",
        "storybook": "^7.5.3",
        "ts-node": "^10.8.2",
        "webpack-cli": "^5.1.4",
        "zx": "^7.2.3"
    }
}
