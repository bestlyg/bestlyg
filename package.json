{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "jest --runInBand --detectOpenHandles --colors",
    "changelog": "lerna-changelog",
    "commit": "git-cz",
    "commit:auto": "git pull && git add -A && yarn commit && git push",
    "build:dev": "rollup --config",
    "build:prod": "rollup --config --environment NODE_ENV:production",
    "update:version": "cd scripts && ts-node version",
    "deploy": "cd scripts && ts-node deploy",
    "leetcode:readme": "cd scripts && ts-node leetcode/createLeetCodeReadme",
    "leetcode:markdown": "cd scripts && ts-node leetcode/createLeetCodeMarkDown",
    "leetcode:auto:markdown": "yarn leetcode:markdown && yarn leetcode:readme && yarn commit:auto",
    "run:js": "cd scripts && node leetcode/env.js",
    "run:ts": "cd scripts && ts-node leetcode/env.ts"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/fs-extra": "^9.0.10",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/semver": "^7.3.4",
    "@types/shelljs": "^0.8.8",
    "commitizen": "^4.2.3",
    "cz-customizable": "^6.3.0",
    "enquirer": "^2.3.6",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "prettier": "^2.2.1",
    "rollup": "^2.44.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
