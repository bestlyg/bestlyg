{
  "name": "bestlyg",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "jest --runInBand --detectOpenHandles --colors",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "commit:auto": "git pull && git add -A && yarn commit && git push -u origin master",
    "dev:pkgs": "rollup --config -w",
    "dev:docs": "dumi dev",
    "build:pkgs": "rollup --config --environment NODE_ENV:production",
    "build:docs": "dumi build",
    "update:dep": "yarn upgradeInteractive --latest",
    "update:version": "cd scripts && ts-node version",
    "update:memory": "cross-env LIMIT=8192 increase-memory-limit",
    "update:coreCode": "cd scripts && ts-node updateCoreCode.ts",
    "deploy": "cd scripts && ts-node deploy",
    "leetcode:readme": "cd scripts && ts-node createLeetCodeReadme",
    "leetcode:markdown": "cd scripts && ts-node createLeetCodeMarkDown",
    "leetcode:auto": "yarn leetcode:markdown && yarn leetcode:readme && yarn commit:auto",
    "run:js": "cd scripts && node env.js",
    "run:ts": "cd scripts && ts-node env.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@rollup/plugin-json": "^4.1.0",
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/semver": "^7.3.6",
    "@types/shelljs": "^0.8.8",
    "@umijs/plugin-esbuild": "^1.3.1",
    "babel-plugin-import": "^1.13.3",
    "chalk": "^4.1.1",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "compression-webpack-plugin": "^8.0.1",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "dumi": "^1.1.20",
    "enquirer": "^2.3.6",
    "fs-extra": "^10.0.0",
    "increase-memory-limit": "^1.0.7",
    "jest": "^27.0.5",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "prettier": "^2.3.1",
    "rollup": "^2.52.3",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
