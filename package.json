{
  "name": "bestlyg",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "jest --runInBand --detectOpenHandles --colors",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "commit:auto": "git pull && git add -A && yarn commit && git push -u origin master",
    "dev:pkgs": "rollup --config -w",
    "dev:docs": "dumi dev",
    "build:pkgs": "rollup --config --environment NODE_ENV:production",
    "build:docs": "dumi build",
    "update:dep": "yarn upgradeInteractive --latest",
    "update:version": "cd scripts && ts-node version",
    "update:memory": "cross-env LIMIT=8192 increase-memory-limit",
    "update:coreCode": "cd scripts && ts-node updateCoreCode.ts",
    "deploy": "cd scripts && ts-node deploy",
    "leetcode:batch": "cd scripts/leetcode && ts-node batchLeetCode",
    "leetcode:readme": "cd scripts/leetcode && ts-node createLeetCodeReadme",
    "leetcode:markdown": "cd scripts/leetcode && ts-node createLeetCodeMarkDown",
    "leetcode:auto": "yarn leetcode:markdown && yarn leetcode:readme && yarn commit:auto",
    "run:js": "cd scripts/leetcode && node script.js",
    "run:ts": "cd scripts/leetcode && ts-node script.ts",
    "<!-- 快捷方式 -->": "下面是快捷方式用的",
    "rj": "yarn run:js",
    "rt": "yarn run:ts",
    "lb": "yarn leetcode:batch",
    "lr": "yarn leetcode:readme",
    "lm": "yarn leetcode:markdown",
    "la": "yarn leetcode:auto",
    "dp": "yarn deploy",
    "c": "yarn commit",
    "ca": "yarn commit:auto",
    "ucc": "yarn update:coreCode",
    "ud": "yarn update:dep"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@rollup/plugin-json": "^4.1.0",
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.180",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.11",
    "@umijs/plugin-esbuild": "^1.4.1",
    "babel-plugin-import": "^1.13.3",
    "chalk": "^5.0.1",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "compression-webpack-plugin": "^9.2.0",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.0",
    "dumi": "^1.1.39",
    "enquirer": "^2.3.6",
    "fs-extra": "^10.0.1",
    "increase-memory-limit": "^1.0.7",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "prettier": "^2.6.0",
    "rollup": "^2.70.1",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "semver": "^7.3.5",
    "shelljs": "^0.8.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
