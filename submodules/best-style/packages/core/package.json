    "license": "MIT",
    "devDependencies": {
        "@emotion/hash": "^0.9.1",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.22",
        "@types/react-dom": "^18.2.7",
        "eslint-plugin-prettier": "^4.2.1",
        "father": "^4.3.8",
        "less-plugin-get-package": "^0.0.1",
        "package-json-extension": "^0.0.5",
