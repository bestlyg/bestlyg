{
    "compilerOptions": {
        "baseUrl": ".",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "declaration": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext", "dom"],
        "isolatedModules": true,
        "types": ["node"],
        "paths": {
            "@best-design/*": ["components/*", "packages/*"]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "components/**/*.ts",
        "components/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
