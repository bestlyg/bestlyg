{
    "name": "best-design",
    "version": "1.0.0",
    "description": "Best React UI Library.",
    "main": "index.js",
    "scripts": {
        "setup": "pnpm clean && pnpm install",
        "clean": "pnpm -r exec rimraf node_modules",
        "prepare": "husky install git-hooks",
        "format:ci": "pretty-quick --since HEAD~1",
        "format": "pretty-quick --staged",
        "commit": "cz",
        "commit:auto": "git add -A && pnpm commit",
        "storybook": "storybook dev -p 6006 --no-open",
        "build-storybook": "storybook build",
        "test": "jest",
        "test:coverage": "pnpm build && jest --coverage",
        "check": "ts-node scripts/check.ts",
        "extend-package-json": "pnpm -r exec extend-package-json"
    },
    "keywords": [
        "React",
        "UI",
        "Library"
    ],
    "author": "bestlyg@foxmail.com",
    "license": "MIT",
