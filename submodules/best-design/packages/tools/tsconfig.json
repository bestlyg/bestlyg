{
    "compilerOptions": {
        "module": "ESNext",
        "outDir": "./lib",
        "rootDir": "./src",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "importHelpers": true,
        "noImplicitAny": false,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "ESNext"
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "lib"]
}
